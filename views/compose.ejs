<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" name="postTitle" class="form-control" id="exampleText" aria-describedby="emailHelp" placeholder="Enter Title">
    <label>Post</label>
    <textarea name="postBody" class="form-control" rows="5" cols="30"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Post</button>
</form>
<%- include("partials/footer"); -%>
